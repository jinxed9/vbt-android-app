<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.forzametrix.forzametrix.velocity.VelocityFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:rotation="90"
            android:textSize="32sp"
            android:text="- - - -" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:rotation="90"
            android:text="Average Velocity" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:rotation="90"
            android:textSize="32sp"
            android:text="- - - -" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:rotation="90"
            android:text="Reps" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/switch_record2"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:rotation="90"
            android:text="Record" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".3"
            android:orientation="vertical">

            <NumberPicker
                android:id="@+id/numberPicker_ones2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:gravity="center_vertical"
                android:rotation="90" />

            <NumberPicker
                android:id="@+id/numberPicker_ones3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:gravity="center"
                android:rotation="90" />

            <NumberPicker
                android:id="@+id/numberPicker_ones4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".1"
                android:gravity="center_vertical"
                android:rotation="90" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
